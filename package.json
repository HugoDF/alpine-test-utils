{
  "name": "alpine-test-utils",
  "description": "Utilities for testing Alpine.js components",
  "version": "0.0.5",
  "source": "src/main.js",
  "main": "src/main.js",
  "types": "types.d.ts",
  "keywords": [
    "alpinejs",
    "testing",
    "jsdom"
  ],
  "files": [
    "src/**.js*"
  ],
  "scripts": {
    "test": "ava",
    "build": "jsdoc -t node_modules/tsd-jsdoc/dist -r src -d .",
    "lint": "xo src tests",
    "format": "xo src tests --fix",
    "release": "yarn build && np"
  },
  "peerDependencies": {
    "alpinejs": "^2.3.1"
  },
  "dependencies": {
    "jsdom": "^16.2.2"
  },
  "devDependencies": {
    "alpinejs": "^2.3.1",
    "ava": "^3.7.0",
    "esm": "^3.2.25",
    "jsdoc": "^3.6.4",
    "np": "^6.2.1",
    "tsd-jsdoc": "^2.5.0",
    "xo": "^0.30.0"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "globals": [],
    "rules": {
      "unicorn/prefer-text-content": 0
    }
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoDF/alpine-test-utils.git"
  },
  "author": "Hugo",
  "bugs": {
    "url": "https://github.com/HugoDF/alpine-test-utils/issues"
  },
  "homepage": "https://github.com/HugoDF/alpine-test-utils#readme"
}
